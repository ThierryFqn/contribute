
<div class="banner-sign-up" style="background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)), url('https://res.cloudinary.com/dlwr1bikm/image/upload/v1646647290/Banner-profil-contribute_saxbbf.jpg')">
  <div class="container">
    <p>❤️</p>
    <h1><span class="welcome-message">Rejoins nous</span></h1>
  </div>
</div>


<div class = "container my-5 sign-up-container">

  <div class = "header" role = "banner">
    <h2>Sign up</h2>
   </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name, label:'Prénom' %>
      <%= f.input :last_name, label:'Nom' %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :photo, as: :file %>
      <%= f.input :causes_preferences, label:'Vos causes préférées',collection: Event::EVENT_CAUSES %>
      <%= f.input :days_preferences, label: 'Jours de préférence', collection: Event::EVENT_DATES %>
      <%= f.input :password, label:'Mot de passe',
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation , label:'Confirmation du mot de passe',
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
    </div>

    <div class="form-actions mb-3">
      <%= f.button :submit, "Sign up", class: "btn-orange" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
