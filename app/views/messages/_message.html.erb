<div id="message-<%= message.id %>" class="message <%= message.user == current_user ? 'message-end' : 'message-start' %>">
  <small>
    <i><%= time_ago_in_words(message.created_at) %></i>
    <strong><%= message.user.first_name.capitalize %> :</strong> <br>
    <p><%= message.content %> </p>
  </small>
</div>

<style>
  .message-start {
    text-align: left;
  }

  .message-end {
    text-align: right;
  }
</style>
